@model LicenseProject.ViewModels.UserProjectViewModel

<html>
<head>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Theme/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Theme/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <form enctype="multipart/form-data" asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h3>@Model.FullName</h3>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Informatii de baza</h3>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label asp-for="FullName" class="control-label">Nume</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend ">
                                                <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                            </div>
                                            <input asp-for="FullName" class="form-control" disabled />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UserName" class="control-label">Username</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            </div>
                                            <input asp-for="UserName" class="form-control" disabled />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Function" class="control-label">Functie</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-chalkboard-teacher"></i></span>
                                            </div>
                                            <input asp-for="Function" class="form-control" disabled placeholder="Functia utilizatorului" />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="Function" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Role" class="control-label">Rol</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-user-check"></i></span>
                                            </div>
                                            <input asp-for="Role" class="form-control" disabled placeholder="Rolul utilizatorului" />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            @*<select asp-for="Role" class="form-control" asp-items="ViewBag.Role"></select>*@
                                            <span asp-validation-for="Role" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @if (Model.IsEmployee)
                                    {
                                        <div class="form-group">
                                            <label asp-for="ProjectName" class="control-label">Nume proiect</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-book"></i></span>
                                                </div>
                                                <select asp-for="ProjectName" class="form-control" asp-items="ViewBag.ProjectName"></select>
                                                <span asp-validation-for="ProjectName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card card-secondary">
                                <div class="card-header">
                                    <h3 class="card-title">Informatii personale</h3>
                                </div>

                                <div class="card-body">
                                    <div class="form-group">
                                        <label asp-for="Gender" class="control-label">Gen</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                            </div>
                                            <input class="form-control" asp-for="Gender" placeholder="Genul utilizatorului" disabled>
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="Gender" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Age" class="control-label">Varsta</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                            </div>
                                            <input type="number" asp-for="Age" min="20" max="100" class="form-control" placeholder="Varsta utilizatorului" disabled />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="Age" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label">Adresa</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-home"></i></span>
                                            </div>
                                            <input asp-for="Address" class="form-control" placeholder=" Adresa utilizatorului" disabled />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber" class="control-label">Numar de telefon</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                            </div>
                                            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefonul utilizatorului" disabled />
                                            <div class="input-group-append">
                                                <span class="input-group-text text-success font-weight-bold">✓</span>
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>

                    @if (Model.IsFinancier && Model.FinancedProjects != null)
                    {
                        @if (Model.FinancedProjects.Count > 0)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">Proiecte Finantate</h3>

                                            <div class="card-tools">
                                                <div class="input-group input-group-sm" style="width: 150px;">
                                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                                    <div class="input-group-append">
                                                        <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body table-responsive p-0">
                                            <table class="table table-hover text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>Nume Proiect</th>
                                                        <th>Status</th>
                                                        <th>Suma finantata</th>
                                                        <th>Moneda</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.FinancedProjects)
                                                    {
                                                        <tr>
                                                            <td>@item.ProjectName</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.AmountOfFunding</td>
                                                            <td>@item.Currency</td>
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                        }
                    }
                    <div class="row">
                        <div class="col-12">
                            <a asp-action="ListUsers" class="btn btn-secondary">Inapoi</a>
                            <input type="submit" value="Salveaza modificari" class="btn btn-success float-right">

                        </div>
                    </div>
                </section>
            </div>
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
        </form>
    </div>
    <!-- InputMask -->
    <script src="~/Theme/plugins/moment/moment.min.js"></script>
    <script src="~/Theme/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="~/Theme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Theme/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Theme/dist/js/demo.js"></script>
</body>
</html>
