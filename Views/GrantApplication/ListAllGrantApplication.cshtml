
@model IEnumerable<LicenseProject.ViewModels.ProjectGrantAppViewModel>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/Theme/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="~/Theme/plugins/toastr/toastr.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Theme/dist/css/adminlte.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Theme/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Theme/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini" id="sideBarMini">
    <div class="wrapper">
        <div class="content-wrapper">
            @if (Model.Count() > 0)
            {
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Cereri de finantare</h1>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>


                <section class="content">
                    <div class="card">
                        <div class="card-body  p-0">
                            <table class="table table-bordered projects table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 15%">
                                            Companie
                                        </th>
                                        <th style="width: 15%">
                                            Reprezentant
                                        </th>
                                        <th style="width: 15%">
                                            Suma de finantare
                                        </th>
                                        <th style="width: 23%">
                                            Nume proiect
                                        </th>
                                        <th style="width: 13%">
                                            Data
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Status
                                        </th>
                                        <th style="width: 8%" class="text-center">
                                            Actiuni
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var grantApp in Model)
                                    {

                                        <tr class="btnDelete" data-id="@grantApp.GrantApplicationID">
                                            <td>
                                                @grantApp.Entity
                                            </td>
                                            <td>
                                                @grantApp.Representative
                                            </td>
                                            <td>
                                                @grantApp.AmountOfFunding
                                                @grantApp.Currency
                                            </td>
                                            <td>
                                                @grantApp.ProjectName
                                            </td>

                                            <td>
                                                @grantApp.Date

                                            </td>
                                            @if (grantApp.Status == "Aprobat")
                                            {
                                                <td class="project-state">
                                                    <span class="badge badge-success">@grantApp.Status</span>
                                                </td>
                                            }
                                            @if (grantApp.Status == "In asteptare")
                                            {
                                                <td class="project-state">
                                                    <span class="badge badge-primary">@grantApp.Status</span>
                                                </td>
                                            }

                                            @if (grantApp.Status == "Respins")
                                            {
                                                <td class="project-state">
                                                    <span class="badge badge-danger">@grantApp.Status</span>
                                                </td>
                                            }
                                            @if (grantApp.Status == null)
                                            {
                                                <td class="project-state">
                                                    <span class="badge badge-danger">NO STATUS</span>
                                                </td>
                                            }
                                            <td>
                                                <a class="btn btn-danger btn-sm btnDelete" href="#">

                                                    Stergere
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="modal fade" id="myModal" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title">Sterge cererea de finantare</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body text-left">
                                            <p>Esti sigur ca doresti sa stergi aceasta cerere de finantare?</p>
                                        </div>
                                        <form asp-action="Delete">
                                            <div class="modal-footer justify-content-between">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Inapoi</button>
                                                <button type="submit" class="btn btn-danger" id="btnDelteYes">Stergere</button>

                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                            <!-- /.modal -->
                        </div>
                        <!-- /.card-body -->

                    </div>
                    <!-- /.card -->
                </section>
            }
            else
            {
                <div>
                    <div class="align-content-lg-stretch">
                        <div class="card-header">
                            <h1 class="card-title lead">
                                Cereri de finantare
                            </h1>
                        </div>
                        <div class="card-body" style="height:750px">

                            <h6>
                                Nu exista cereri de finantare.
                            </h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Theme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Theme/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Theme/dist/js/demo.js"></script>
    <!-- SweetAlert2 -->
    <script src="~/Theme/plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="~/Theme/plugins/toastr/toastr.min.js"></script>
</body>
</html>

<script>
    function pushMenuClick(value) {
        var sideBarMini = $('#sideBarMini');
        if ($('#sideBarMini').hasClass('sidebar-collapse')) {
            $('#sideBarMini').removeClass('sidebar-collapse');
        }
        else {
            sideBarMini.addClass("sidebar-collapse");
        }
    }
</script>



<script>

    $('a.btnDelete').on('click', function (e) {
        e.preventDefault();
        var id = $(this).closest('tr').data('id');
        $('#myModal').data('id', id).modal('show');
        debugger;
    });
    $('#btnDelteYes').click(function () {
        var id = $('#myModal').data('id');
        var myUrl = `/GrantApplication/Delete?id=${id}`;
        //
        var data = undefined;
        $('#myModal').modal('hide');
        $('[data-id=' + id + ']').remove();
        var response = deleteProject(myUrl);
        if (response.success) {

            toastr.success(data.message);

        }
        else {
            toastr.error("Error while Deleting");
        }


    });

    function deleteProject(url) {
        var dataResponse;
        $.ajax({
            type: 'GET',
            url: url,
            async: false,
            cache: false,
            timeout: 5000,
            success: function (data) {
                debugger;
                dataResponse = data;
            }
        });
        return dataResponse;
    }
