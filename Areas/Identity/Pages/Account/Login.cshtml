@page
@model LoginModel
@{
    Layout = null;
}

<html>
<head>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Theme/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Theme/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Theme/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card">
            <div class="card-body login-card-body">
                <h4><a class="register-box-msg">Autentificare</a></h4>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <label class="a-form-label">Email</label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Email" class="form-control" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="Input.Email" class=" fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <label class="a-form-label">Parola</label>
                        <div class="input-group mb-3">
                            <input asp-for="Input.Password" class="form-control">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span asp-validation-for="Input.Password" class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input asp-for="Input.RememberMe">
                                    <label asp-for="Input.RememberMe">
                                        Tine-ma minte
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="">
                                <button type="submit" class="btn btn-primary btn-block">Autentificare</button>
                            </div>
                            <!-- /.col -->
                        </div>

                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Ti-ai uitat parola ?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inregistrare ca nou utilizator</a>
                            </p>
                        </div>

                    </form>
                </section>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Theme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Theme/dist/js/adminlte.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>


